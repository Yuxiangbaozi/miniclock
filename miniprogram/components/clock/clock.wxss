/* components/clock/clock.wxss */
.mini-clock{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.mini-clock text{
  color: blue;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.mini-clock text picker{
  display: inline-block
}
.mini-clock image{
  width: 360rpx;
  height: 360rpx;
}
.active{
  opacity: 0.6;
}