/* pages/clock/clock.wxss */
.clock{
  position: relative;
  background: rgb(199, 237, 248);
  height: 100vh;
}
.pucture{
  margin-bottom: 120rpx;
  padding-top: 180rpx;
}
.btn2{
  margin: 50rpx;
}
.btn3{
  margin-top: 120rpx;
}
.button-hover{
  opacity: 0.6;
}

.cover{
  position: absolute;
  left: 0%;
  top: 0;
  width: 100%;
  height: 750rpx;
  background: whitesmoke;
  opacity: 0.7;
  z-index: 1
}
.selectWrapper{
  position: absolute relative;
}
 .selectWrapper .time{
  display: flex;
  position: absolute;
  top: 0;
  left: 0%;
  background: rgb(25, 176, 226);
  width: 100%;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  padding-left: 50rpx;
  font-size: 50rpx;
  line-height: 50rpx;
  z-index: 2
}
.selectWrapper .img{
  display: flex;
  position: absolute;
  vertical-align: top;
  right: 60rpx;
  top: 25rpx;
  z-index: 2
}
.selectWrapper .img image{
  height: 50rpx;
  width: 50rpx;
}
.selectWrapper .selectTime .selectView{
  height: 50px;
  background: rgb(25, 176, 226);
  opacity: 0.4;
}
.selectWrapper .selectTime .maskView{
  background: white;
  opacity: 0.1;
}
.selectWrapper .selectTime picker-view{
  position: absolute;
  top: 100rpx;
  left: 0%;
  width: 100%; 
  height: 650rpx;
  z-index: 2
}
.selectWrapper .selectTime picker-view-column view{
  line-height: 50px;
  padding-left: 80rpx;
}